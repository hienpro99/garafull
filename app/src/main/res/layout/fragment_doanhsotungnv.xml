<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorTrendingEnd">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Từ ngày"
            android:id="@+id/btnTuNgay"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="dd/MM/yyy"
            android:id="@+id/edTuNgay"
            android:layout_weight="2"
            android:textSize="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đến ngày"
            android:id="@+id/btnDenNgay"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="dd/MM/yyy"
            android:id="@+id/edDenNgay"
            android:layout_weight="2"
            android:textSize="18dp"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDoanhThu"
        android:text="Doanh Số"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDoanhThu"
        android:textSize="20dp"
        android:text="Doanh Số"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="00dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hóa Đơn"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#F44336"
        android:visibility="invisible"
        android:id="@+id/tvhd"
        />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvHDonDT"
        />


</LinearLayout>